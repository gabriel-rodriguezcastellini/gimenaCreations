@page
@model GimenaCreations.Pages.Admin.CatalogItems.EditModel

@{
    ViewData["Title"] = "Catalog";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["ActivePage"] = ManageNavPages.Catalog;
}

<h1>Edit</h1>

<h4>Catalog item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatalogItem.Id" />
            <input type="hidden" asp-for="CatalogItem.PictureFileName" />
            <div class="form-group">
                <label asp-for="CatalogItem.Name" class="control-label"></label>
                <input asp-for="CatalogItem.Name" class="form-control" />
                <span asp-validation-for="CatalogItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.Description" class="control-label"></label>
                <input asp-for="CatalogItem.Description" class="form-control" />
                <span asp-validation-for="CatalogItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.Price" class="control-label"></label>
                <input asp-for="CatalogItem.Price" class="form-control" />
                <span asp-validation-for="CatalogItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.PictureFileName" class="control-label"></label>
                <img src="~/@Model.CatalogItem.PictureFileName" class="w-25" />                
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.FormFile" class="control-label"></label>
                <input asp-for="CatalogItem.FormFile" class="form-control" />
                <span asp-validation-for="CatalogItem.FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.CatalogTypeId" class="control-label"></label>
                <select asp-for="CatalogItem.CatalogTypeId" class="form-control" asp-items="ViewBag.CatalogTypeId"></select>
                <span asp-validation-for="CatalogItem.CatalogTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.AvailableStock" class="control-label"></label>
                <input asp-for="CatalogItem.AvailableStock" class="form-control" />
                <span asp-validation-for="CatalogItem.AvailableStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.RestockThreshold" min="0" class="control-label"></label>
                <input asp-for="CatalogItem.RestockThreshold" class="form-control" />
                <span asp-validation-for="CatalogItem.RestockThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.MaxStockThreshold" class="control-label"></label>
                <input asp-for="CatalogItem.MaxStockThreshold" min="0" class="form-control" />
                <span asp-validation-for="CatalogItem.MaxStockThreshold" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CatalogItem.OnReorder" /> @Html.DisplayNameFor(model => model.CatalogItem.OnReorder)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CatalogItem.RequiresFile" /> @Html.DisplayNameFor(model => model.CatalogItem.RequiresFile)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CatalogItem.IsVisible" /> @Html.DisplayNameFor(model => model.CatalogItem.IsVisible)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
