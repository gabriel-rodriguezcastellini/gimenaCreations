@page
@model GimenaCreations.Pages.Admin.CatalogTypes.EditModel

@{
    ViewData["Title"] = "Catalog types";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["ActivePage"] = ManageNavPages.CatalogTypes;
}

<h1>Edit</h1>

<h4>Catalog type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatalogType.Id" />
            <div class="form-group">
                <label asp-for="CatalogType.Type" class="control-label"></label>
                <input asp-for="CatalogType.Type" class="form-control" />
                <span asp-validation-for="CatalogType.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
