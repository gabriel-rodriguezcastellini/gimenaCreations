@page
@model GimenaCreations.Pages.Admin.PurchaseItems.EditModel

@{
    ViewData["Title"] = "Purchases";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["ActivePage"] = ManageNavPages.Purchases;
}

<h1>Edit</h1>

<h4>Purchase Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PurchaseItem.Id" />
            <input type="hidden" asp-for="PurchaseItem.PurchaseId" />
            <div class="form-group">
                <label asp-for="PurchaseItem.Quantity" class="control-label"></label>
                <input asp-for="PurchaseItem.Quantity" class="form-control" />
                <span asp-validation-for="PurchaseItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseItem.CatalogItemId" class="control-label"></label>
                <select asp-for="PurchaseItem.CatalogItemId" class="form-control" asp-items="ViewBag.CatalogItemId"></select>
                <span asp-validation-for="PurchaseItem.CatalogItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseItem.Name" class="control-label"></label>
                <input asp-for="PurchaseItem.Name" class="form-control" />
                <span asp-validation-for="PurchaseItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseItem.Price" class="control-label"></label>
                <input asp-for="PurchaseItem.Price" class="form-control" />
                <span asp-validation-for="PurchaseItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseItem.PurchaseId" class="control-label"></label>
                <select asp-for="PurchaseItem.PurchaseId" class="form-control" asp-items="ViewBag.PurchaseId" disabled></select>
                <span asp-validation-for="PurchaseItem.PurchaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Admin/Purchases/Edit" asp-route-id="@Model.PurchaseItem.PurchaseId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
