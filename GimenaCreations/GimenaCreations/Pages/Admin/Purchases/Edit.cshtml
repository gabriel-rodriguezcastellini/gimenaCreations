@page
@model GimenaCreations.Pages.Admin.Purchases.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Purchase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Purchase.Id" />
            <div class="form-group">
                <label asp-for="Purchase.SupplierId" class="control-label"></label>
                <select asp-for="Purchase.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                <span asp-validation-for="Purchase.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.InvoiceNumber" class="control-label"></label>
                <input asp-for="Purchase.InvoiceNumber" class="form-control" />
                <span asp-validation-for="Purchase.InvoiceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.InvoiceDate" class="control-label"></label>
                <input asp-for="Purchase.InvoiceDate" class="form-control" />
                <span asp-validation-for="Purchase.InvoiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.InvoiceExpirationDate" class="control-label"></label>
                <input asp-for="Purchase.InvoiceExpirationDate" class="form-control" />
                <span asp-validation-for="Purchase.InvoiceExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Purchase.IsPaid" /> @Html.DisplayNameFor(model => model.Purchase.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.Reference" class="control-label"></label>
                <input asp-for="Purchase.Reference" class="form-control" />
                <span asp-validation-for="Purchase.Reference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
