@page
@model GimenaCreations.Pages.Admin.Suppliers.EditModel

@{
    ViewData["Title"] = "Suppliers";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["ActivePage"] = ManageNavPages.Suppliers;
}

<h1>Edit</h1>

<h4>Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Supplier.Id" />
            <div class="form-group">
                <label asp-for="Supplier.SupplierId" class="control-label"></label>
                <input asp-for="Supplier.SupplierId" class="form-control" />
                <span asp-validation-for="Supplier.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Supplier.Agreement" /> @Html.DisplayNameFor(model => model.Supplier.Agreement)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.SupplierType" class="control-label"></label>
                <input asp-for="Supplier.SupplierType" class="form-control" />
                <span asp-validation-for="Supplier.SupplierType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Phone1" class="control-label"></label>
                <input asp-for="Supplier.Phone1" class="form-control" />
                <span asp-validation-for="Supplier.Phone1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Phone2" class="control-label"></label>
                <input asp-for="Supplier.Phone2" class="form-control" />
                <span asp-validation-for="Supplier.Phone2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.ContactName" class="control-label"></label>
                <input asp-for="Supplier.ContactName" class="form-control" />
                <span asp-validation-for="Supplier.ContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.ContactPhone" class="control-label"></label>
                <input asp-for="Supplier.ContactPhone" class="form-control" />
                <span asp-validation-for="Supplier.ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.BusinessName" class="control-label"></label>
                <input asp-for="Supplier.BusinessName" class="form-control" />
                <span asp-validation-for="Supplier.BusinessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Address" class="control-label"></label>
                <input asp-for="Supplier.Address" class="form-control" />
                <span asp-validation-for="Supplier.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.City" class="control-label"></label>
                <input asp-for="Supplier.City" class="form-control" />
                <span asp-validation-for="Supplier.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.State" class="control-label"></label>
                <input asp-for="Supplier.State" class="form-control" />
                <span asp-validation-for="Supplier.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Email" class="control-label"></label>
                <input asp-for="Supplier.Email" class="form-control" />
                <span asp-validation-for="Supplier.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.AddDate" class="control-label"></label>
                <input asp-for="Supplier.AddDate" class="form-control" />
                <span asp-validation-for="Supplier.AddDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img class="w-100" src="@Url.Page("Index", "Image", new { id = Model.Supplier.Id })" />
            </div>
            <div class="form-group">
                <label asp-for="Supplier.FormFile" class="control-label"></label>
                <input asp-for="Supplier.FormFile" type="file">
                <span asp-validation-for="Supplier.FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
