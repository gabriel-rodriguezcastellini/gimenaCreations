@model GimenaCreations.ViewModels.CriticalViewModels.CriticalStockViewModel

<style>
    .modal-backdrop.show {
        /*opacity: 0 !important;*/
        z-index: 99 !important;
    }
</style>

<button type="button" class="btn btn-primary @(Model.Disabled)" data-mdb-toggle="modal" data-mdb-target="#exampleModal" title="critical stock">
    Critical stock
    <span class="badge badge-pill bg-danger">@Model.CatalogItems.Count</span>
    <span><i class="fas fa-exclamation"></i></span>
</button>

<!-- Modal -->
<div class="modal fade pt-5" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Critical stock</h5>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                The next items are under critical stock:
                <ul>
                    @foreach (var item in Model.CatalogItems)
                    {
                        <li>Product: @item.Name, Available stock: @item.AvailableStock, Restock threshold: @item.RestockThreshold</li>
                    }
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>